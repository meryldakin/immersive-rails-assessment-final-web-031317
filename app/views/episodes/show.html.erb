<h1>Episode</h1>
<% appearance = Appearance.find_by(episode_id: @episode.id) %>
<%= link_to "Edit Appearance", edit_appearance_path(appearance) %>
<h3><%= "Date: #{@episode.date}" %></h3>

<h3>Guests</h3>

<table>
  <thead>
    <th>Guest Name</th>
    <th>Guest Rating</th>
    <th>Booking Producer</th>
  </thead>
  <tbody>
    <% @episode.guests.each do |guest| %>
    <tr>
      <td><%= link_to guest.name, guest %></td>
      <td><%= appearance.rating %></td>
      <td><%= appearance.user.username %></td>
    </tr>
    <% end %>
  </tbody>
</table>
